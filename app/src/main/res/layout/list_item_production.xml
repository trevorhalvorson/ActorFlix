<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

    <TextView
        android:id="@+id/list_item_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/list_item_year_text_view"
        android:layout_toStartOf="@+id/list_item_year_text_view"
        android:padding="4dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Title"/>

    <TextView
        android:id="@+id/list_item_category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_title_text_view"
        android:padding="4dp"
        tools:text="Category"/>

    <TextView
        android:id="@+id/list_item_year_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        tools:text="Year"/>

</RelativeLayout>